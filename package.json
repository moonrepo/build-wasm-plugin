  "repository": {
    "type": "git",
    "url": "https://github.com/moonrepo/build-wasm-plugin"
  },
  "author": "Miles Johnson",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/tool-cache": "^2.0.1",
    "@ltd/j-toml": "^1.38.0",
    "changelog-parser": "^3.0.1"
  },
  "devDependencies": {
    "@types/changelog-parser": "^2.8.4",
    "@types/node": "^20.11.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "eslint-config-moon": "^2.0.14",
    "prettier": "^3.1.1",
    "prettier-config-moon": "^1.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-moon": "^1.3.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
