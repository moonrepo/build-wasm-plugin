{
  "name": "@moonrepo/build-wasm-plugin",
  "version": "0.2.3",
  "description": "A GitHub action to build, optimize, and prepare WASM plugins for release.",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build ./index.ts",
    "check": "pnpm run lint && pnpm run test && pnpm run typecheck",
